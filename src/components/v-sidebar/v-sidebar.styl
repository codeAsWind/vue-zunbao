@import '~common/stylus/variable'
@import '~common/stylus/mixin'

.sidebar
  font-size 14px
  position fixed
  bottom 20px
  right 0
  z-index 99999
  background #245a96
  color $color-light
  width 130px
  border 1px solid #6998e8
  transform translate3d(100%,0,0)
  transition all .3s ease-in
  &.active
    transform translate3d(0,0,0)
  .bar
    position absolute
    right 130px
    top 0
    background #6998e8
    width 40px
    border-radius 10px 0 0 10px
    padding 12px
    cursor pointer
    span
      padding-top 4px
      display inline-block
    i
      font-size 22px
      margin-left -3px
  .item
    position relative
    &:last-child
      a
        border 0
    a
      color $color-light
      display flex
      justify-content center
      align-items center
      line-height 60px
      border-bottom 1px solid #5ec9e8
      transition all .3s ease-in
      padding 0 15px
      overflow hidden
      &:hover
        background #2578BA
      i
        margin-right 4px
        font-size 18px
    &.ewm
      background #232844
      a
        flex-direction column
        line-height 22px
        padding 5px 0
      .text
        padding 8px 0




